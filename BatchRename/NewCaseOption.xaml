<UserControl x:Class="BatchRename.NewCaseOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <StackPanel Margin="10 10 10  10">
        <RadioButton Content="UPPERCASE" GroupName="newCase" Margin="5" IsChecked="True"></RadioButton>
        <RadioButton Content="lowercase" GroupName="newCase"  Margin="5"></RadioButton>
        <RadioButton Content="Name normalize" GroupName="newCase" Margin="5"></RadioButton>
        <Button Content="Add to list" Width="80" Height="25"></Button>
    </StackPanel>
</UserControl>
