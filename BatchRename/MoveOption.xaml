<UserControl x:Class="BatchRename.MoveOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="300"
             Name="MoveOptionView">
    <DockPanel>
        <Canvas>

            <TextBlock Text="Start" Canvas.Left="28" Canvas.Top="10"/>
            <TextBox Name="Move_Start_TextBox" Width="200" BorderBrush="Black" BorderThickness="1" Canvas.Left="61" Canvas.Top="9"/>

            <TextBlock Text="End" Canvas.Left="29" Canvas.Top="46"/>
            <TextBox Name="Move_End_TextBox" Width="200" BorderBrush="Black" BorderThickness="1" Canvas.Left="61" Canvas.Top="45"/>
            <CheckBox Name="Move_toAfter" Content="Move to after" Canvas.Left="164" Canvas.Top="78"/>
            <Button Name="Add_MoveMenthod_Button" Content="Add List" Canvas.Left="207" Canvas.Top="107" Height="26"/>

        </Canvas>
    </DockPanel>

</UserControl>
