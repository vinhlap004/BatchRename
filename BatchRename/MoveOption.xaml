<UserControl x:Class="BatchRename.MoveOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BatchRename"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500"
             Name="MoveOptionView">

    <DockPanel>
        <DockPanel LastChildFill="True">

            <DockPanel DockPanel.Dock="Top">
                <TextBlock Text="Start" Margin="5"/>
                <TextBox Name="Move_Start_TextBox" BorderBrush="Black" BorderThickness="1" Margin="5" />
            </DockPanel>


            <DockPanel DockPanel.Dock="Top">
                <TextBlock Text="End" Margin="5 5 10 5"/>
                <TextBox Name="Move_End_TextBox" BorderBrush="Black" BorderThickness="1" Margin="5" />
            </DockPanel>
            <CheckBox Name="Move_toAfter" Content="Move to after" Margin="5 5 5 20"/>
            <Button Name="Add_MoveMenthod_Button" Content="Add List" Width="100" Height="26"/>

        </DockPanel>
    </DockPanel>

</UserControl>
