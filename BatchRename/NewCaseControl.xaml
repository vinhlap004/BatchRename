<Window x:Class="BatchRename.NewCaseControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="NewCaseControl" Height="200" Width="500">
    <Grid>
        <StackPanel Margin="10 10 10  10">
            <RadioButton Name="upper_case" Content="UPPERCASE" GroupName="newCase" Margin="5" IsChecked="True"></RadioButton>
            <RadioButton Name="lower_case" Content="lowercase" GroupName="newCase"  Margin="5"></RadioButton>
            <RadioButton Name="namenormalize" Content="Name_normalize" GroupName="newCase" Margin="5"></RadioButton>
            <Button Content="Add to list" Width="80" Height="25" Name="ContentControl_AddButton" Click="ContentControl_AddButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
