<Window x:Class="BatchRename.ReplaceControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="ReplaceControl" Height="200" Width="500">
    <Grid>
        <DockPanel>
            <DockPanel LastChildFill="True">

                <DockPanel DockPanel.Dock="Top">
                    <TextBlock Text="From" Margin="5"></TextBlock>
                    <TextBox Name="Replace_From_TextBox"  Margin="5 5 5 5"></TextBox>
                </DockPanel>

                <DockPanel DockPanel.Dock="Top">
                    <TextBlock Text="To" Margin="5"></TextBlock>
                    <TextBox Name="Replace_To_TextBox" Margin="20 5 5 5"></TextBox>
                </DockPanel>

                <Button Content="Add to list" Name="Replace_AddtoList_Button" Click="Replace_AddtoList_Button_Click" Width="80" Height="25" Margin="100 0 0 0"></Button>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
