<Window x:Class="BatchRename.UniqueNameControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BatchRename"
        mc:Ignorable="d"
        Title="UniqueNameControl" Height="100" Width="400">
    <Grid>
        <StackPanel>
            <RadioButton Content="Unique Name" GroupName="UniqueName" Margin="5 5 5 5" IsChecked="True"></RadioButton>
            <Button Content="Add to list" Width="80" Height="25"></Button>
        </StackPanel>
    </Grid>
</Window>
